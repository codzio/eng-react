<%- include("../header"); %>
<div class="d-flex flex-column flex-root app-root" id="kt_app_root">
    <div class="app-page  flex-column flex-column-fluid " id="kt_app_page">
        <%- include("../navbar"); %>
        <div class="app-wrapper  flex-column flex-row-fluid " id="kt_app_wrapper">
            <%- include("../sidebar"); %>
            <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
                <div class="d-flex flex-column flex-column-fluid">
                    <div id="kt_app_content" class="app-content  flex-column-fluid " >
                        <div id="kt_app_content_container" class="app-container  container-fluid ">
                            <form id="kt_ecommerce_add_page_form" class="form d-flex flex-column flex-lg-row" action="/admin/page/doUpdatePage" method="post" enctype="multipart/form-data">
                                <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                                    <div class="card card-flush py-4">      
                                        <div class="card-header">
                                            <div class="card-title">
                                                <h2>General</h2>
                                            </div>
                                        </div>
                                        <div class="card-body pt-0">                
                                            <div class="mb-10 fv-row">                      
                                                <label class="required form-label">Title</label>
                                                <input type="text" name="title" class="form-control mb-2" placeholder="Title" value="<%= pageData.title %>" />
                                                <span id="titleErr" class="text-danger removeErr"></span>
                                            </div>
                                            
                                            <div class="mb-10 fv-row"> 
                                                <label class="required form-label">Slug</label>
                                                <input readonly id="slug" type="text" name="slug" class="form-control mb-2" placeholder="Slug" value="<%= pageData.slug %>" />
                                                <span id="slugErr" class="text-danger removeErr"></span>
                                            </div>

                                            <div class="mb-10 fv-row">                      
                                                <label class=" form-label">Heading 1</label>
                                                <input type="text" name="heading1" class="form-control mb-2" placeholder="Heading 1" value="<%= pageData.heading1 %>" />
                                                <span id="heading1Err" class="text-danger removeErr"></span>
                                            </div>

                                            <div class="mb-10 fv-row">                      
                                                <label class=" form-label">Heading 2</label>
                                                <input type="text" name="heading2" class="form-control mb-2" placeholder="Heading 2" value="<%= pageData.heading2 %>" />
                                                <span id="heading2Err" class="text-danger removeErr"></span>
                                            </div>

                                            <div class="mb-10 fv-row">
                                                <label class="form-label">Description</label>
                                                <!-- <div id="description" name="description" class="min-h-200px mb-2"><%- pageData.description %></div> -->
                                                <textarea name="description" cols="4" rows="4" class="form-control mb-2 description"><%- pageData.description -%></textarea>
                                                <span id="descriptionErr" class="text-danger removeErr"></span>
                                            </div>

                                            <!-- About Us Page Fields Start -->

                                            <% 
                                                if(pageData._id == "64ec49e4e0caf56a64815819") { 
                                            %>

                                            <div class="mb-10 fv-row">                      
                                                <label class="form-label">Our Journey</label>
                                                <textarea rows="5" cols="5" name="ourJourney" class="form-control mb-2" placeholder="Our Journey"><%- pageData.data[0].ourJourney %></textarea>
                                                <span id="ourJourneyErr" class="text-danger removeErr"></span>
                                            </div>

                                            <div class="mb-10 fv-row">                      
                                                <label class="form-label">How We Work</label>
                                                <textarea rows="5" cols="5" name="howWeWork" class="form-control mb-2" placeholder="How We Work"><%- pageData.data[0].howWeWork %></textarea>
                                                <span id="howWeWorkErr" class="text-danger removeErr"></span>
                                            </div>

                                            <div class="mb-10 fv-row">                      
                                                <label class="form-label">Mission</label>
                                                <textarea rows="5" cols="5" name="mission" class="form-control mb-2" placeholder="Mission"><%- pageData.data[0].mission %></textarea>
                                                <span id="missionErr" class="text-danger removeErr"></span>
                                            </div>

                                            <div class="mb-10 fv-row">                      
                                                <label class="form-label">Vision</label>
                                                <textarea rows="5" cols="5" name="vision" class="form-control mb-2" placeholder="Vision"><%- pageData.data[0].vision %></textarea>
                                                <span id="visionErr" class="text-danger removeErr"></span>
                                            </div>

                                            <% } %>

                                            <!-- About Us Page Fields End -->

                                        </div>                                        
                                    </div>
                                    
                                    <div class="card card-flush py-4">      
                                        <div class="card-header">
                                            <div class="card-title">
                                                <h2>Meta Options</h2>
                                            </div>
                                        </div>
                                        <div class="card-body pt-0">
                                            <div class="mb-10">                             
                                                <label class="form-label">Meta Title</label>
                                                <input type="text" class="form-control mb-2" name="metaTitle" placeholder="Meta title" value="<%= pageData.metaTitle %>" />      
                                                <span id="metaTitleErr" class="text-danger removeErr"></span>
                                            </div>
                                            
                                            <div class="mb-10">
                                                <label class="form-label">Meta Description</label>
                                                <!-- <div id="metaDescription" name="metaDescription" class="min-h-200px mb-2"><%- pageData.metaDescription %></div> -->
                                                <textarea name="metaDescription" cols="4" rows="4" class="form-control mb-2 description"><%- pageData.metaDescription -%></textarea>
                                                <span id="metaDescriptionErr" class="text-danger removeErr"></span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex justify-content-end">

                                        <a href="/admin/product" id="kt_ecommerce_add_product_cancel" class="btn btn-light me-5">Cancel</a>

                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="_id" value="<%= pageData._id %>">
                                        <button type="submit" class="btn btn-primary">
                                            <span class="indicator-label">
                                                Save Changes
                                            </span>
                                            <span class="indicator-progress">
                                                Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </form>        
                        </div>           
                    </div>
                </div>
                <%- include("../sub_footer"); %>
            </div>
        </div>
    </div>
</div>
<%- include("../footer"); %>