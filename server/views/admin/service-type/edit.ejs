<%- include("../header"); %>
<div class="d-flex flex-column flex-root app-root" id="kt_app_root">
    <div class="app-page  flex-column flex-column-fluid " id="kt_app_page">
        <%- include("../navbar"); %>
        <div class="app-wrapper  flex-column flex-row-fluid " id="kt_app_wrapper">
            <%- include("../sidebar"); %>
            <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
                <div class="d-flex flex-column flex-column-fluid">
                    <div id="kt_app_content" class="app-content  flex-column-fluid " >
                        <div id="kt_app_content_container" class="app-container  container-fluid ">
                            <form id="kt_ecommerce_add_service_type_category_form" class="form d-flex flex-column flex-lg-row" action="/admin/service-type/doUpdateServiceType" method="post">
                                <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                                    <div class="card card-flush py-4">      
                                        <div class="card-header">
                                            <div class="card-title">
                                                <h2>General</h2>
                                            </div>
                                        </div>
                                        <div class="card-body pt-0">                
                                            <div class="mb-10 fv-row">                      
                                                <label class="required form-label">Service Name</label>
                                                <input type="text" name="serviceName" class="form-control mb-2" placeholder="Service name" value="<%= serviceTypeData.title %>" />
                                                <span id="serviceNameErr" class="text-danger removeErr"></span>
                                            </div>

                                            <div class="mb-10 fv-row">
                                                <label class="form-label row container-fluid required">Icon</label>
                                                <input type="file" name="icon" class="form-control mb-2" accept=".png, .jpg, .jpeg">
                                                <div class="form-text">Allowed file types: jpg, jpeg and png.</div>
                                                <span id="iconErr" class="text-danger removeErr"></span>

                                                <% if(serviceTypeData.icon) { %>
                                                
                                                <div class="image-input image-input-outline mt-10" data-kt-image-input="true" style="background-image: url('../media/blank.svg')">
                                                    <div class="image-input-wrapper w-125px h-125px" style="background-image: url('/<%= serviceTypeData.icon %>')"></div>
                                                </div>

                                                <% } %>

                                            </div>

                                        </div>                                        
                                    </div>
                                    
                                    <div class="d-flex justify-content-end">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="_id" value="<%= serviceTypeData._id %>">
                                        <button type="submit" class="btn btn-primary">
                                            <span class="indicator-label">
                                                Save Changes
                                            </span>
                                            <span class="indicator-progress">
                                                Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </form>        
                        </div>           
                    </div>
                </div>
                <%- include("../sub_footer"); %>
            </div>
        </div>
    </div>
</div>
<%- include("../footer"); %>